{
  "compilerOptions": {
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "target": "ES2022",
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",

    "strict": true,
    "noUncheckedIndexedAccess": true,

    "moduleResolution": "NodeNext",
    "module": "NodeNext",

    "lib": ["ES2022"],
    "noEmit": true
  },
  "include": ["src", "playground.ts"]
}
